<resources>

    <!-- Base application theme. -->
    <style name="Netfrixson" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:textViewStyle">@style/Netfrixson.TextView</item>
    </style>

    <style name="Netfrixson.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Netfrixson.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Netfrixson.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Netfrixson.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
    </style>

    <style name="Netfrixson.TextView.Label">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
